<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/normalButtonStyle</item>
        <item name="android:buttonStyle">@style/normalButtonStyle</item>
        <item name="imageButtonStyle">@style/normalImageButtonStyle</item>
        <item name="android:imageButtonStyle">@style/normalImageButtonStyle</item>
    </style>

    <style name="ColourBlindTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/colourBlindButtonStyle</item>
        <item name="android:buttonStyle">@style/colourBlindButtonStyle</item>
        <item name="imageButtonStyle">@style/colourBlindImageButtonStyle</item>
        <item name="android:imageButtonStyle">@style/colourBlindImageButtonStyle</item>
    </style>

    <style name="normalButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="colourBlindButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="backgroundTint">@color/colorAccentColourBlind</item>
        <item name="android:backgroundTint">@color/colorAccentColourBlind</item>
        <item name="background">@color/colorAccentColourBlind</item>
        <item name="android:background">@color/colorAccentColourBlind</item>
    </style>

    <style name="normalImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="colourBlindImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/colorAccentColourBlind</item>
        <item name="android:backgroundTint">@color/colorAccentColourBlind</item>
        <item name="background">@color/colorAccentColourBlind</item>
        <item name="android:background">@color/colorAccentColourBlind</item>
    </style>

</resources>
